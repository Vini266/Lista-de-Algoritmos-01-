//Exercicio 01
#include <stdio.h>
#include <locale.h>


int main () 
{
	
	
	setlocale (LC_ALL,"portuguese"); //ao localizar em português, os números de entrada também devem ser escritos com virgula. 
	float h1, h2, m;
	
	printf ("Qual a altura da primeira pessoa?\n");
	scanf ("%f", &h1);
	printf ("Qual a altura da segunda pessoa?\n");
	scanf ("%f", &h2);
	m = (h1+h2)/2.0;
	printf("A média entre a altura das duas pessoas é: %.2f", m);
	

}
